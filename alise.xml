<context>
      <input pattern="Здравствуй,в каком городе погоду?"/>
         <input pattern="$Text">
           <var name="geop" value="cap($Text)" scope="geog"/>
                <get url="https://api.openweathermap.org/data/2.5/weather" var="Weather">
                <param name="APPID" value="ffb63727190e500e4ef133e1bbe773ec"/>
                <param name="q" value="$geop"/>
             </get>
  <output value='get("temp", get("main", $Weather))'/>
   </input>
  </context>
 </input>
     
</context>
