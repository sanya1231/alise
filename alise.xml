<context>

    <sample>
        <item value="Кто такая Алиса"/>
        <item value="Что такое бот"/>
    </sample>

 <input pattern="* (привет*|здравствуй*) *">
    <output value="Привет $UserName!" if="full($UserName)"/>
    
    <context if="empty($UserName)" id="name">
      <output value="Здравствуй, давай знакомиться!Как тебя зовут?"/>
        <input pattern="$Text">
          
          <var name="UserName" value="cap($Text)" scope="user"/>
          <output value="Приятно познакомиться, $UserName!Что-то хотел узнать у меня?"/>
        </input>
      </context>
    </input>
 
 <input pattern="* погода* в $pog">
         <get url="api.openweathermap.org/data/2.5/weather?q=$pog&APPID=ffb63727190e500e4ef133e1bbe773ec" var="Weather">
    <param name="APPID" value="ffb63727190e500e4ef133e1bbe773ec"/>
    <param name="units" value="metric"/>
    <param name="lat" value="$UserLatitude"/>
    <param name="lon" value="$UserLongitude"/>
  </get>

  <output value='get("temp", get("main", $Weather))'/>

 </input>
</context>
